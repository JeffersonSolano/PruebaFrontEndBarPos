@page "{id:long}"
@model BarPos.Pages.Productos.EditModel
@{
    ViewData["Title"] = "Editar Producto";
}

<h1>Editar Producto</h1>

<form method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Producto.Id" />

    <div class="form-group mb-3">
        <label asp-for="Producto.Nombre" class="form-label"></label>
        <input asp-for="Producto.Nombre" class="form-control" />
        <span asp-validation-for="Producto.Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Producto.PrecioCompra" class="form-label"></label>
        <input asp-for="Producto.PrecioCompra" class="form-control" type="number" />
        <span asp-validation-for="Producto.PrecioCompra" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Producto.Stock" class="form-label"></label>
        <input asp-for="Producto.Stock" class="form-control" type="number" />
        <span asp-validation-for="Producto.Stock" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Producto.CategoriaId" class="form-label"></label>
        <select asp-for="Producto.CategoriaId" asp-items="Model.CategoriasList" class="form-select"></select>
        <span asp-validation-for="Producto.CategoriaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar Cambios</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
</form>

@page
@model BarPos.Pages.Productos.CreateModel
@{
    ViewData["Title"] = "Nuevo Producto";
}

<h2>Crear Producto</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>


    <div class="form-group mb-3">
        <label asp-for="Producto.Nombre"></label>
        <input asp-for="Producto.Nombre" class="form-control" />
        <span asp-validation-for="Producto.Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Producto.PrecioCompra"></label>
        <input asp-for="Producto.PrecioCompra" class="form-control" type="number"/>
        <span asp-validation-for="Producto.PrecioCompra" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Producto.Stock"></label>
        <input asp-for="Producto.Stock" class="form-control" type="number" step="1" />
        <span asp-validation-for="Producto.Stock" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Producto.CategoriaId">Categoría</label>
        <select asp-for="Producto.CategoriaId" class="form-control" asp-items="Model.CategoriasList">
            <option value="">-- Seleccione una categoría --</option>
        </select>
        <span asp-validation-for="Producto.CategoriaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
</form>

@page "{id:long}"
@model BarPos.Pages.Productos.DeleteModel
@{
    ViewData["Title"] = "Eliminar Producto";
}

<h1>Eliminar Producto</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<h4>¿Seguro que deseas eliminar este producto?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-3">ID</dt>
    <dd class="col-sm-9">@Model.Producto.Id</dd>

    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@Model.Producto.Nombre</dd>

    <dt class="col-sm-3">Precio Compra</dt>
    <dd class="col-sm-9">₡@Model.Producto.PrecioCompra</dd>

    <dt class="col-sm-3">Stock</dt>
    <dd class="col-sm-9">@Model.Producto.Stock</dd>

    <dt class="col-sm-3">Categoría</dt>
    <dd class="col-sm-9">@Model.Producto.Categoria?.Nombre</dd>
</dl>

<form method="post">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
</form>

@page
@model BarPos.Pages.Cuentas.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<!-- contenido principal -->
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <!-- Tarjeta con la información general de la cuenta -->
            <div class="card shadow">
                <!-- Encabezado con título y estado de la cuenta -->
                <div class="card-header bg-info text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-receipt"></i> Detalle de Cuenta
                        </h4>
                        <!-- Muestra el estado (abierta o cerrada) con color dinámico -->
                        <span class="badge bg-@(Model.Cuenta.Estado == "Abierta" ? "success" : "secondary") fs-6">
                            @Model.Cuenta.Estado
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Información del Cliente -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5><i class="bi bi-person"></i> Cliente</h5>
                            <p class="fs-4 fw-bold text-primary">@Model.Cuenta.NombreCliente</p>
                        </div>
                        <div class="col-md-6 text-end">
                            <h5><i class="bi bi-clock"></i> Fecha de Apertura</h5>
                            <p class="fs-5">@Model.Cuenta.FechaApertura?.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>

                    <hr />

                    <!-- Tabla de Productos -->
                    <h5 class="mb-3"><i class="bi bi-cart"></i> Productos</h5>

                    @if (Model.Cuenta.DetalleCuentas.Any())
                    {
                        <!-- Si la cuenta tiene productos Los muestra en una tabla -->
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Categoría</th>
                                        <th>Producto</th>
                                        <th>Presentación</th>
                                        <th class="text-center">Cantidad</th>
                                        <th class="text-end">Precio Unit.</th>
                                        <th class="text-end">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <!-- Recorre cada detalle de cuenta -->
                                    @foreach (var detalle in Model.Cuenta.DetalleCuentas)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">
                                                    @detalle.Presentacion.Producto.Categoria.Nombre
                                                </span>
                                            </td>
                                            <td class="fw-bold">@detalle.Presentacion.Producto.Nombre</td>
                                            <td>@detalle.Presentacion.Nombre</td>
                                            <td class="text-center">
                                                <span class="badge bg-info">@detalle.Cantidad</span>
                                            </td>
                                            <td class="text-end">₡@detalle.PrecioUnitario.ToString("N2")</td>
                                            <td class="text-end fw-bold text-primary">
                                                ₡@detalle.Subtotal?.ToString("N2")
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <!-- Fila de total general -->
                                <tfoot class="table-light">
                                    <tr>
                                        <td colspan="5" class="text-end fw-bold fs-5">TOTAL:</td>
                                        <td class="text-end fw-bold fs-4 text-success">
                                            ₡@Model.Cuenta.Total?.ToString("N2")
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <!-- Si no hay productos muestra mensaje de advertencia -->
                        <div class="alert alert-warning text-center">
                            <i class="bi bi-exclamation-triangle"></i> No hay productos en esta cuenta
                        </div>
                    }

                    <!-- información de Pago (solo si esta cerrada) -->
                    @if (Model.Cuenta.Estado == "Cerrada")
                    {
                        <hr />
                        <div class="row mt-4">
                            <div class="col-md-4">
                                <h6>Método de Pago</h6>
                                <p class="fs-5">
                                    <span class="badge bg-@(Model.Cuenta.MetodoPago == "Efectivo" ? "success" : "info") fs-6">
                                        @Model.Cuenta.MetodoPago
                                    </span>
                                </p>
                            </div>
                            <div class="col-md-4">
                                <h6>Monto Pagado</h6>
                                <p class="fs-5 text-primary">₡@Model.Cuenta.MontoPagado?.ToString("N2")</p>
                            </div>
                            <div class="col-md-4">
                                <h6>Vuelto</h6>
                                <p class="fs-5 text-success">₡@Model.Cuenta.Vuelto?.ToString("N2")</p>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pie de la tarjeta con botones de navegacion o acciones -->
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-page="./Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>

                        <!-- Si la cuenta está abierta permite agregar productos o cerrarla -->
                        @if (Model.Cuenta.Estado == "Abierta")
                        {

                            <div>
                                <a asp-page="./AgregarProducto" asp-route-id="@Model.Cuenta.Id"
                                   class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Agregar Productos
                                </a>
                                <a asp-page="./CerrarCuenta" asp-route-id="@Model.Cuenta.Id"
                                   class="btn btn-success">
                                    <i class="bi bi-check-circle"></i> Cerrar Cuenta
                                </a>
                            </div>
                        }
                        else
                        {
                            <!-- Si la cuenta esta cerrada muestra opcion para imprimir -->
                            <button class="btn btn-outline-primary" onclick="window.print()">
                                <i class="bi bi-printer"></i> Imprimir
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Estilos solo imprimir -->
@section Scripts {
    <style>
        @@media print {
            .card-footer, .btn, nav { display: none !important; }
        }
    </style>
}